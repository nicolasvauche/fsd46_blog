{% extends 'layout/default/index.html.twig' %}

{% block title %}{% trans %}Catégorie{% endtrans %}{% endblock %}

{% block main %}
    <h1>{% trans %}Catégorie{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Nom{% endtrans %}</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Uri{% endtrans %}</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">{% trans %}Retour à la liste{% endtrans %}</a>
    {% if is_granted("ROLE_ADMIN") %}
        
        <a href="{{ path('app_category_edit', {'slug': category.slug}) }}">{% trans %}Modifier{% endtrans %}</a>
    
        {{ include('category/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
